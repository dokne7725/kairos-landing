---
// Este componente acepta dos "props": un título y un subtítulo
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="mx-auto max-w-3xl text-center">
  <h2 class="text-3xl font-bold tracking-tight text-night-gray sm:text-4xl">
    {title}
  </h2>
  <p class="mt-4 text-lg leading-8 text-night-gray/80">
    {subtitle}
  </p>
</div>